.SUFFIXES:
.SUFFIXES: .so .a .o .c .f .f90 .h

CC=@CC@
F77=@F77@
CFLAGS=@CFLAGS@
CPPFLAGS=@CPPFLAGS@ -I. -I../include
FFLAGS=@FFLAGS@
F90=@F90@
F90FLAGS=@F90FLAGS@
LDFLAGS=@LDFLAGS@
H4ROOT=@H4ROOT@
H5ROOT=@H5ROOT@
LIBS=@LIBS@
FROOT=.
NXTARGET=@NXTARGET@	# used to pass other appropriate build targets
RANLIB=@RANLIB@
#
LIBNEXUS=../../src/libNeXus.a
LIBNEXUS90_OBJ=NXUmodule.o NXmodule.o

all: $(NXTARGET)
nexus4: 		# hdf4 only targets
nexus5: 		# hdf5 only targets
nexus77: 		# f77 only targets
nexus90: libNeXus90.a	# f90 only targets

clean :
	rm -f libNeXus90.a *.o

NXUmodule.o: NXUmodule.f90 NXmodule.o

libNeXus90.a : $(LIBNEXUS90_OBJ)
	@echo "*** Creating Fortran 90 NeXus interface  ***"
	cp $(LIBNEXUS) $@
	ar -r $@ $(LIBNEXUS90_OBJ)
	$(RANLIB) $@

#
# general build rules
#
.c.o :
	$(CC) $(CPPFLAGS) $(CFLAGS) -c $(FROOT)/$*.c 

.f.o:
	$(F77) $(FFLAGS) -c $(FROOT)/$*.f

.f90.o:
	$(F90) $(F90FLAGS) -c $(FROOT)/$*.f90
