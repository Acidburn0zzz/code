#!/bin/sh
#
# $Id$
#
# Script to build RPMs from current nexus*.tar.gz file
# Copyright (C) 2004 Freddie Akeroyd
#
# $1 is set to any options you want to pass to ./configure
#
# get topdir - must find a better way ...
topdir=`rpm --showrc|grep topdir| awk '{print $3}' | tail -1`
if test ! -e "$topdir"; then
    echo "Unable to determine RPM topdir from rpmrc; assuming /usr/src/redhat"
    topdir="/usr/src/redhat"
fi
if test ! -w "$topdir"; then
    echo "ERROR: RPM build directory not writable - check README.rpm"
    exit
fi
#
nxtop=`pwd`
rm -fr $nxtop/installroot
mkdir $nxtop/installroot
# 
make dist
ln -sf $nxtop/@PACKAGE_TARNAME@-@PACKAGE_VERSION@.tar.gz $topdir/SOURCES
cp $nxtop/nexus.spec $topdir/SPECS
cd $topdir/SPECS
#
if test -z "$1"; then
    build_args="--with-python --with-java-home=/usr/lib/jvm/java-1.6.0-openjdk-1.6.0.0.x86_64/ --with-doxygen"
else
    build_args="$1"
fi
# buildroot is actually where we install to
env NEXUS_CONFIG_OPTIONS="$build_args" rpmbuild -ba --buildroot $nxtop/installroot nexus.spec --define "_source_filedigest_algorithm md5" --define "_binary_filedigest_algorithm md5"
