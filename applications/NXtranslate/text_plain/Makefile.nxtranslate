# select input types
TEXT_PLAIN_CFLAGS=-DTEXT_PLAIN_RETRIEVER
TEXT_PLAIN_OBJS=text_plain/retriever.o
#TEXT_PLAIN_LIBS=

# source files
TEXT_PLAIN_SRC=text_plain/retriever.cpp text_plain/retriever.h \
