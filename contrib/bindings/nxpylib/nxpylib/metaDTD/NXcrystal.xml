<!--
URL:     http://www.neutron.anl.gov/nexus/xml/NXcrystal.xml
Editor:  NIAC
$Id$

Template of a crystal monochromator or analyzer.

-->
<NXcrystal name="{Name of crystal beamline component}">
   <distance type="NX_FLOAT" units="m">{Distance of chopper from sample}?</distance>
   <wavelength type="NX_FLOAT" units="Angstroms">{Optimum diffracted wavelength}?</wavelength>
   <energy type="NX_FLOAT" units="meV">{Optimum diffracted energy}?</energy>
   <lattice_parameter type="NX_FLOAT" units="Angstrom">{Lattice parameter of the nominal reflection}?</lattice_parameter>
   <reflection type="NX_INT[3]">{[hkl] values of nominal reflection}?</reflection>
   <horizontal_curvature type="NX_FLOAT" units="degrees">{Horizontal curvature of focusing crystal}?</horizontal_curvature>
   <vertical_curvature type="NX_FLOAT" units="degrees">{Vertical curvature of focusing crystal}?</vertical_curvature>
   <horizontal_aperture type="NX_FLOAT" units="cm">{Horizontal aperture, if rectangular}?</horizontal_aperture>
   <vertical_aperture type="NX_FLOAT" units="cm">{Vertical aperture, if rectangular}?</vertical_aperture>
</NXcrystal>
