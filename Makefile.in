@SET_MAKE@
SUBDIRS=src @BINDINGS@ test applications

all :
	for i in $(SUBDIRS); do  echo "Building in $$i"; ( cd $$i; $(MAKE) all ); done

clean :
	for i in $(SUBDIRS); do  echo "Cleaning in $$i"; ( cd $$i; $(MAKE) clean ); done
