.SUFFIXES:
.SUFFIXES: .so .a .o .c .f .f90 .h

CC=@CC@
F77=@F77@
CFLAGS=@CFLAGS@
CPPFLAGS=@CPPFLAGS@ -I. -I../include
FFLAGS=@FFLAGS@ -I../bindings/f77
F90=@F90@
F90FLAGS=@F90FLAGS@ -I../bindings/f90
LDFLAGS=@LDFLAGS@
H4ROOT=@H4ROOT@
H5ROOT=@H5ROOT@
LIBS=@LIBS@
FROOT=.
NXTARGET=@NXTARGET@	# used to pass other appropriate build targets
RANLIB=@RANLIB@
#
TEST4_OBJ=napi4_test.o
TEST5_OBJ=napi5_test.o
TESTF_OBJ=napif_test.o
NXTEST_OBJ=NXtest.o
LIBNEXUS=../src/libNeXus.a
LIBNEXUS90=../bindings/f90/libNeXus90.a
LIBNEXUS77=../bindings/f77/libNeXus77.a

all: $(NXTARGET)
nexus4: napi4_test		# hdf4 only targets
nexus5: napi5_test		# hdf5 only targets
nexus77: napif_test 		# f77 only targets
nexus90: NXtest			# f90 only targets

clean :
	rm -f napi4_test napi5_test napif_test NXtest *.o

napi4_test: $(TEST4_OBJ) 
	$(CC) $(LDFLAGS) -o $@ $(TEST4_OBJ) $(LIBNEXUS) $(LIBS)

napi5_test: $(TEST5_OBJ) 
	$(CC) $(LDFLAGS) -o $@ $(TEST5_OBJ) $(LIBNEXUS) $(LIBS)
	
napif_test:  $(TESTF_OBJ)
	$(F77) $(LDFLAGS) -o $@ $(TESTF_OBJ) $(LIBNEXUS77) $(LIBS)

NXtest: $(NXTEST_OBJ)
	$(F90) $(F90FLAGS) $(LDFLAGS) -o $@ $(NXTEST_OBJ) $(LIBNEXUS90) $(LIBS)
#
# general build rules
#
.c.o :
	$(CC) $(CPPFLAGS) $(CFLAGS) -c $(FROOT)/$*.c 

.f.o:
	$(F77) $(FFLAGS) -c $(FROOT)/$*.f

.f90.o:
	$(F90) $(F90FLAGS) -c $(FROOT)/$*.f90
